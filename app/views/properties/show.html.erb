<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div>
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a aria-controls="home" data-toggle="tab" href="#general" role="tab">General Info & Features</a>
        </li>
        <li role="presentation">
          <a aria-controls="profile" data-toggle="tab" href="#photos" role="tab">Photos</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="general" role="tabpanel">
          <div class="form-horizontal">
            <h1 class="page-header">General Info</h1>
            <div class="form-group">
              <label class="col-sm-2 control-label">Title</label>
              <div class="col-sm-10">
                <label class="control-label text-primary"><%= @property.title %></label>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Property Type</label>
              <div class="col-sm-10">
                <label class="control-label text-primary"><%= @property.property_type.name %></label>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Description</label>
              <div class="col-sm-10">
                <p class="text-primary"><%= @property.description %></p>
              </div>
            </div>
            <div class="cleafix"></div>
            <h1 class="page-header">Features</h1>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Quantity</th>
                </tr>
              </thead>
              <tbody>
                <% if @property.features_properties.any? %>
                  <% @property.features_properties.each do |features_property| %>
                    <tr>
                      <td><%= features_property.feature.name %></td>
                      <td><%= features_property.quantity %></td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="3">No features added to this property</td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="tab-pane" id="photos" role="tabpanel">
          <% unless @property.photos.empty? %>
            <% @property.photos.each do |photo| %>
              <img class="uploaded-image" width=200 height=200 src="<%= '/public/uploads/044a43ff-362f-4683-bc77-4e0f915df695.png' %>" />
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div><br /><hr />
<div class="row">
  <div class="col-lg-12">
    <div class="pull-right">
      <%= link_to 'Back', properties_path, class: 'btn btn-default' %>
      <%= link_to 'Edit', edit_property_path(@property), class: 'btn btn-primary' %>
      <%= link_to 'Destroy', destroy_property_path(@property), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
<br /><br /><br />
